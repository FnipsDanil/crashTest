DEBUG=false
ENVIRONMENT=production

# | Сервер            | CPU | RAM   | Рекоменд. воркеры |
# | ------------------| --- | ----- | ----------------- |
# | 4 cores / 8 GB    | 4   | 8 GB  | 4–6               |
# | 6 cores / 12 GB   | 6   | 12 GB | 6–8               |
# | 8 cores / 16 GB   | 8   | 16 GB | 8–10              |
# | 10 cores / 20 GB  | 10  | 20 GB | 10–12             |
GUNICORN_WORKERS=2

# Telegram Bot Token from BotFather
TG_BOT_TOKEN=123123123
TG_BOT_SENDER_TOKEN=123123123

# Webhook secret для проверки платежей (опционально)
# Should be a random string 16-64 characters, alphanumeric + special chars
# Generate with: openssl rand -base64 32 | tr -d "=+/" | cut -c1-32
WEBHOOK_SECRET=123123123
WEBHOOK_BASE_URL=https://que-crash.fun

# Redis URL for game state storage
REDIS_URL=redis://redis:6379

# Frontend URL for Telegram WebApp
WEB_APP_URL=https://que-crash.fun

# API URL for frontend (optional, defaults to localhost:8000)
VITE_API_URL=https://que-crash.fun

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Frontend development server port
VITE_DEV_PORT=5173

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://web.telegram.org,https://telegram.org,https://que-crash.fun

# CSRF protection allowed origins (should match CORS_ORIGINS)
ALLOWED_ORIGINS=https://web.telegram.org,https://telegram.org,https://que-crash.fun

# CSRF protected endpoints (comma-separated)
CSRF_PROTECTED_ENDPOINTS=/join,/cashout,/purchase-gift,/api/player/check-channel-subscription

# Channel subscription bonus feature toggle
# Set to false/0/no/off to disable the feature completely
CHANNEL_BONUS_ENABLED=true

# PostgreSQL configuration
POSTGRES_DB=crash_stars_db
POSTGRES_USER=crash_stars_user
# Strong password: minimum 16 characters, mix of upper/lower/digits/symbols
# Generate with: openssl rand -base64 24
POSTGRES_PASSWORD=123123123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Security configuration
# HMAC secret key for request signing (must be same for backend and frontend)
# Should be 32-64 characters, cryptographically secure random string
# Generate with: openssl rand -hex 32
GAME_SECURITY_KEY=123123123
VITE_HMAC_SECRET_KEY=123123123

# Support system configuration
SUPPORT_USER_ID=CrashStars          # Рекомендуется: username без @ (откроет чат сразу)
# SUPPORT_USER_ID=123456789         # Альтернативно: Telegram User ID (откроет профиль)
# Telegram bot token for admin notifications
TELEGRAM_ALERT_BOT_TOKEN=123123123
ADMIN_CHAT_ID=-123123123           # Chat ID для получения уведомлений о новых заявках
# Telegram Business Connection ID (get from Telegram Business API)
BUSINESS_CONNECTION_ID=123123123

# Telegram API credentials for MTProto client (get from https://my.telegram.org/auth)
# API_ID: numeric value (usually 7-8 digits)
TELEGRAM_SENDER_API_ID=123123
TELEGRAM_SENDER_API_HASH=123123
TELEGRAM_SENDER_PHONE_NUMBER=+7123123123
GIFT_TRANSFER_STAR_COST=25    # Default 25 stars
USER_INTERACTION_HOURS=48     # Default 48 hours

# Gift Bot Configuration for Frontend
VITE_GIFT_BOT_USERNAME=CrashStars

# PostgreSQL feature flags (for gradual migration)
DISABLE_POSTGRESQL_GAME_HISTORY=false
DISABLE_POSTGRESQL_BALANCE_UPDATES=false

# TON/Star pricing configuration
STAR_PRICE_USD=0.015

# Telegram Bot Backend URL (for bot service)
BACKEND_URL=https://que-crash.fun

# Production Security Settings
SSL_VERIFY=true
SECURE_COOKIES=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SECURE=true

# Rate Limiting Configuration
MAX_REQUESTS_PER_MINUTE=300
MAX_GAME_ACTIONS_PER_MINUTE=700
MAX_API_CALLS_PER_MINUTE=30

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_ACCESS_LOG=true
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL=300
STATIC_CACHE_TTL=31536000

# Grafana настройки
GRAFANA_ADMIN_PASSWORD=123123
GRAFANA_SECRET_KEY=sslgeneritnado
GRAFANA_DOMAIN=que-crash.fun

# PostgreSQL пароль для read-only пользователя
GRAFANA_DB_PASSWORD=123123